application.JSON = {
    stringify: function (arg) {
        var c, i, l, s = '', v;
        application.JSON.error_occured = false;
        switch (typeof arg) {
            case 'object': {
                if (arg) {
                    if (arg instanceof Array) {
                        for (i = 0; i < arg.length; ++i) {
                            v = application.JSON.stringify(arg[i]);
                            if (s != '') {
                                s += ',';
                            }
                            s += v;
                        }
                        return '[' + s + ']';
                    } else if (typeof arg.toString != 'undefined') {
                        for (i in arg) {
                            v = arg[i];
                            if (typeof v != 'undefined' && typeof v != 'function') {
                                v = application.JSON.stringify(v);
                                if (s != '') {
                                    s += ',';
                                }
                                s += application.JSON.stringify(i) + ':' + v;
                            }
                        }
                        return '{' + s + '}';
                    }
                }
                return 'null';
            }
            case 'number': {
                return isFinite(arg) ? String(arg) : 'null';
            }
            case 'string': {
                l = arg.length;
                s = '"';
                for (i = 0; i < l; i += 1) {
                    c = arg.charAt(i);
                    if (c >= ' ') {
                        if (c == '\\' || c == '"') {
                            s += '\\';
                        }
                        s += c;
                    } else {
                        switch (c) {
                            case '\b':
                                s += '\\b';
                                break;
                            case '\f':
                                s += '\\f';
                                break;
                            case '\n':
                                s += '\\n';
                                break;
                            case '\r':
                                s += '\\r';
                                break;
                            case '\t':
                                s += '\\t';
                                break;
                            default:
                                c = c.charCodeAt();
                                s += '\\u00' + Math.floor(c / 16).toString(16) + (c % 16).toString(16);
                        }
                    }
                }
                return s + '"';
            }
            case 'boolean': {
                return String(arg);
            }
            default: {
                return 'null';
            }
        }
    },
    parse: function (text) {
        var at = 0;
        var ch = ' ';
        application.JSON.error_occured = false;
        function error(m) {
            trace('JSONError: '+m)
        }
        function next() {
            ch = text.charAt(at);
            at += 1;
            return ch;
        }
        function white() {
            while (!application.JSON.error_occured && ch != null) {
                if (ch <= ' ') {
                    next();
                } else if (ch == '/') {
                    next();
                    switch (ch) {
                        case '/': {
                            while (!application.JSON.error_occured && next() != null && ch != '\n' && ch != '\r') {}
                            break;
                        }
                        case '*': {
                            next();
                            while (true) {
                                if (ch) {
                                    if (ch == '*') {
                                        if (next() == '/') {
                                            next();
                                            break;
                                        }
                                    } else {
                                        next();
                                    }
                                } else {
                                    error('Unterminated comment');
                                }
                            }
                            break;
                        }
                        default: {
                            error('Syntax error');
                        }
                    }
                } else {
                    break;
                }
            }
        }
        function str() {
            var i, s = '', t, u;
            var outer = false;
            if (ch == '"') {
                while (!application.JSON.error_occured && next() != null) {
                    if (ch == '"') {
                        next();
                        return s;
                    } else if (ch == '\\') {
                        next();
                        switch (ch) {
                            case 'b': {
                                s += '\b';
                                break;
                            }
                            case 'f': {
                                s += '\f';
                                break;
                            }
                            case 'n': {
                                s += '\n';
                                break;
                            }
                            case 'r': {
                                s += '\r';
                                break;
                            }
                            case 't': {
                                s += '\t';
                                break;
                            }
                            case 'u': {
                                u = 0;
                                for (i = 0; i < 4; i += 1) {
                                    t = parseInt(next(), 16);
                                    if (!isFinite(t)) {
                                        outer = true;
                                        break;
                                    }
                                    u = u * 16 + t;
                                }
                                if (outer) {
                                    outer = false;
                                    break;
                                }
                                s += String.fromCharCode(u);
                                break;
                            }
                            default: {
                                s += ch;
                            }
                        }
                    } else {
                        s += ch;
                    }
                }
            }
            error('Bad string');
        }
        function arr() {
            var a = [];
            if (ch == '[') {
                next();
                white();
                if (ch == ']') {
                    next();
                    return a;
                }
                while (!application.JSON.error_occured && ch != null) {
                    a.push(value());
                    white();
                    if (ch == ']') {
                        next();
                        return a;
                    } else if (ch != ',') {
                        break;
                    }
                    next();
                    white();
                }
            }
            error('Bad array');
        }
        function obj() {
            var k, o = {};
            if (ch == '{') {
                next();
                white();
                if (ch == '}') {
                    next();
                    return o;
                }
                while (!application.JSON.error_occured && ch != null) {
                    k = str();
                    white();
                    if (ch != ':') {
                        break;
                    }
                    next();
                    o[k] = value();
                    white();
                    if (ch == '}') {
                        next();
                        return o;
                    } else if (ch != ',') {
                        break;
                    }
                    next();
                    white();
                }
            }
            error('Bad object');
        }
        function num() {
            var n = '', v;
            if (ch == '-') {
                n = '-';
                next();
            }
            while (!application.JSON.error_occured && ch >= '0' && ch <= '9') {
                n += ch;
                next();
            }
            if (ch == '.') {
                n += '.';
                next();
                while (!application.JSON.error_occured && ch >= '0' && ch <= '9') {
                    n += ch;
                    next();
                }
            }
            if (ch == 'e' | ch == 'E') {
                n += ch;
                next();
                if (ch == '-' || ch == '+') {
                    n += ch;
                    next();
                }
                while (!application.JSON.error_occured && ch >= '0' && ch <= '9') {
                    n += ch;
                    next();
                }
            }
            v = Number(n);
            if (!isFinite(v)) {
                error('Bad number');
            }
            return v;
        }
        function word() {
            switch (ch) {
                case 't': {
                    if (next() == 'r' && next() == 'u' && next() == 'e') {
                        next();
                        return true;
                    }
                    break;
                }
                case 'f': {
                    if (next() == 'a' && next() == 'l' && next() == 's' && next() == 'e') {
                        next();
                        return false;
                    }
                    break;
                }
                case 'n': {
                    if (next() == 'u' && next() == 'l' && next() == 'l') {
                        next();
                        return null;
                    }
                    break;
                }
            }
            error('Syntax error');
        }
        function value() {
            white();
            switch (ch) {
                case '{': {
                    return obj();
                }
                case '[': {
                    return arr();
                }
                case '"': {
                    return str();
                }
                case '-': {
                    return num();
                }
                default: {
                    return ch >= '0' && ch <= '9' ? num() : word();
                }
            }
        }
        return value();
    }
};
application.aasv = function(settings) {
    // Asynchronous Actionscript and Variables
    var send = new LoadVars();
    var load = new LoadVars();
    var data = (settings.data || {});
    load.onLoad = function (success) {
        var result = this;
        if (success) {
            if (settings.type === 'json') {
                try {
                    result = application.JSON.parse(result.json);
                } catch (error) {
                    trace('&json='+error.name+':'+error.message+':'+error.at+':'+error.text);
                }
            }   
        }
        if (typeof settings.complete === 'function') {
            settings.success.apply(load, result);
        }
    };
    for (var property in data) {
        send[property] = params[property];
    }
    send.sendAndLoad(settings.url, load, settings.method || 'GET');
};
application.onAppStart = function() {
    trace(this.name + ' has been re-loaded');
    this.maxClients = 2;
};
application.onConnect = function (client, user) {
    trace(user + ' is requesting access...');
    
    if (this.clients.length + 1 > this.maxClients) {
        trace('\t- Too many users, rejecting client.');
        this.rejectConnection(client);
    } else {
        client.name = user;
        trace('\t- ' + client.name + ' is connected');
        this.acceptConnection(client);
    }

    client.registerUser = function (token, email, player) {
        application.aasv({
            url: 'http://yourdomain.com/register.json',
            method: 'POST',
            type: 'json',
            data: { id:client.name, token:token, email:email, player:player },
            complete: function (data) {
                if (data) {
                    trace(data);
                } else {
                    trace('\t- Error connecting to server.');
                }
                application.broadcastMsg('onRegisterUser', client.name, data);
            }
        });
    };

    client.signinUser = function (token) {
        application.aasv({
            url: 'http://yourdomain.com/signin.json',
            method: 'POST',
            type: 'json',
            data: { id:client.name, token:token },
            complete: function (data) {
                if (data) {
                    trace(data);
                } else {
                    trace('\t- Error connecting to server.');
                }
                application.broadcastMsg('onSigninUser', client.name, data);
            }
        });
    };

    client.changePlayer = function (player) {
        application.broadcastMsg('onChangePlayer', client.name, player);
    };

    client.startGame = function () {
        application.broadcastMsg('onStartGame', client.name);
    };
    
    client.updateScore = function (score) {
        application.broadcastMsg('onUpdateScore', client.name, score + 1);
    };
};
application.onDisconnect = function(client) {
    this.broadcastMsg('onDisconnect', client.name);
};
